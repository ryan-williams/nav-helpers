#!/usr/bin/env bash

# Navigation aliases
alias cdp="cd $PWD"

alias u="cd .."
alias uu="cd ../.."
alias uuu="cd ../../.."
alias uuuu="cd ../../../.."

alias psh="pushd"
alias pop="popd"
alias P="pushd"
alias b="popd"

defn mcd multi-cd

defn md mkdir -p
defn mkd mkdir -p
defn mdp mkdir -p
defn mdn mkdir-dirname

defn mpd mkdir-p-dirname

multi_cd() {
	if [ $# -ne 1 ]; then
		echo "Usage: $0 <dir>" >&2
		return 1
	fi
	if [ -d "$1" ]; then
	    cd "$1"
	else
	    files=$(ls -Ad "*$1*")
	    if [ "$(count $files)" == "1" ]; then
	        cd $files
	    else
	        echo 'select:'
	        select filename in $files; do
	            cd $filename
	            break
	        done
	    fi
	fi
}
export -f multi_cd

mkdir_p_cd() {
	if [ $# -ne 1 ]; then
		echo "Usage: $0 <dir>" >&2
		return 1
	fi
	dir="$1"
	mkdir -p "$dir" && cd "$dir"
}
export -f mkdir_p_cd

defn mdc mkdir_p_cd

cdn() {
  cd "$(dn "$@")"
}

alias cdr=cd-run
